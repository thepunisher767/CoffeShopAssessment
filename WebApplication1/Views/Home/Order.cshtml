@using WebApplication1.Models
@model Account
<h1>Hello @Model.FirstName</h1>
<h2>Place your order below:</h2>
<form method="post" action="/Home/PickupOrDelivery">
    <label for="drink">Drink:</label>
    <select name="drink" required>
        <option style="display:none"></option>
        <option value="Cappuchino">Cappuchino</option>
        <option value="Latte">Latte</option>
        <option value="Espresso">Espresso</option>
        <option value="Pumpkin Spice">Pumpkin Spice</option>
    </select><br />
    <label for="size">Size:</label>
    <select name="size" required>
        <option style="display:none"></option>
        <option value="Small">Small</option>
        <option value="Medium">Medium</option>
        <option value="Large">Large</option>
    </select><br /><br />
    <label for="size">Pickup or Delivery:</label>
    <select name="orderoption" required>
        <option style="display:none"></option>
        <option value="Pickup">Pickup</option>
        <option value="Delivery">Delivery</option>
    </select><br /><br />
    <input type="hidden" name="firstname" value="@Model.FirstName">
    <input type="hidden" name="lastname" value="@Model.LastName">
    <input type="hidden" name="email" value="@Model.Email">
    <button type="submit">Next</button>
</form>

