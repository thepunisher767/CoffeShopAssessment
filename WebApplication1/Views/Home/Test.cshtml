@using WebApplication1.Models
@model Account

<h1>@ViewBag.Welcome</h1>
<br />
<h4>Thank you for registering!!!</h4>
<br />
<p>Enjoy alllll the coffeeeeeeeeeeeeeeeee @ViewBag.User.FirstName!!!!!!</p>
